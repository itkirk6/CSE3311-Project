# Server Settings
#NEXT_PUBLIC_BACKEND_URL=http://192.168.1.12:3001
NEXT_PUBLIC_BACKEND_URL=https://outdoor-spot.com
# you will have to change this if running locallly!




# Database Configuration
DATABASE_URL=postgresql://outdoor_spot_user:outdoor_spot_password@postgres:5432/outdoor_spot
REDIS_URL=redis://localhost:6379
POSTGRES_USER=outdoor_spot_user
POSTGRES_PASSWORD=outdoor_spot_password
POSTGRES_DB=outdoor_spot

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=30d

# External APIs
WEATHER_API_KEY=your_weather_api_key
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Service
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@outdoorspot.com
EMAIL_FROM_NAME=OutdoorSpot

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Application Settings
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000
#FRONTEND_URL=http://192.168.1.12:3000
FRONTEND_URL=https://outdoor-spot.com
BACKEND_URL=http://outdoor-spot-backend:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
#CORS_ORIGIN=http://192.168.1.12:3000
CORS_ORIGIN=https://outdoor-spot.com,https://www.outdoor-spot.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Development Tools
DEBUG=outdoor-spot:*
MOCK_EXTERNAL_APIS=false
